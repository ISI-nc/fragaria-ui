<t:container xml:space="default"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

	<t:block id="bigDecimal">
		<t:label for="bigDecimalField" />
		<t:textfield t:id="bigDecimalField"
			value="context.propertyValue" label="prop:context.label"
			format="prop:dateInputFormat" translate="prop:bigDecimalTranslator"
			validate="prop:bigDecimalValidator"
			clientId="prop:context.propertyId" annotationProvider="context" />
	</t:block>
</t:container>